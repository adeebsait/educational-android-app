<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditProfilePictureActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile_edit"
                android:layout_width="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/peson"
                app:civ_border_color="@color/blue"
                app:civ_border_width="1dp">

            </de.hdodenhof.circleimageview.CircleImageView>

            <ImageView
                android:id="@+id/img_buttonEdit_edit"
                app:layout_anchor="@id/img_profile_edit"
                app:layout_anchorGravity="right"
                android:layout_margin="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/edit"
                android:contentDescription="Icon Edit" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <Button
            android:id="@+id/btn_confirm_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Edit"
            android:layout_marginTop="40dp"
            android:textAllCaps="false"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>